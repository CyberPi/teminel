# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 150

[*.go]
indent_style = tab
indent_size = 3
max_line_length = 150

[*.xml]
indent_style = tab
indent_size = 3
